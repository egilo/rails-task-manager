
<h1 class="task_head">Your Tasks</h1>

<div class="task_list">
<ul>
<% @tasks.each do |task| %>
 <li><%= link_to task.title, task_path(task) %> <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %></li>
<% end %>
</ul>
</div>

<div class="link"> <%= link_to "Create new task", :new_task  %> </div>

